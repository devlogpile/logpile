<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
          http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>artifacts</baseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${basedir}/server/target</directory>
            <includes>
                <include>server-*-distribution.zip</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${basedir}/client/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- adding example -->
        <fileSet>
            <outputDirectory>/example</outputDirectory>
            <directory>${basedir}/client-example/src/main/assembly</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/example/classes</outputDirectory>
            <directory>${basedir}/client-example/src/test/resources</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/example/lib</outputDirectory>
            <directory>${basedir}/client-example/target</directory>
            <includes>
                <include>*-jar-with-dependencies.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>