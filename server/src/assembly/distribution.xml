<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
          http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>/classes</outputDirectory>
            <directory>${basedir}/target/classes</directory>

            <excludes>
                <exclude>*.conf</exclude>
                <exclude>*.json</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>/config</outputDirectory>
            <directory>${basedir}/config/</directory>
            <includes>
                <include>*.conf</include>
                <include>*.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${basedir}/src/assembly/</directory>
            <includes>
                <include>run_server</include>
                <include>run_server.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/webapp</outputDirectory>
            <directory>${basedir}/src/main/webapp</directory>
            <excludes>
                <exclude>js/**</exclude>
                <exclude>css/**</exclude>
                <exclude>WEB-INF/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <!--fileSets>

    </fileSets-->
</assembly>